%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1

      = bootstrap_form_tag(url: login_path) do |f|

        %header
          %h1 Sign in

        .row
          .col-sm-4
            = f.email_field :email, label: 'Email Address'

        .row
          .col-sm-4
            = f.password_field :password

        = f.submit 'Sign In'
        = link_to 'forgot password?', forgot_password_path

